mixin slider(className)
  section.slider(class=className)
    .slider__slide-wrapper
      picture
        source(srcset="img/ural-desktop@1x.webp" media="(min-width: 1440px)" type="image/webp")
        source(srcset="img/ural-desktop@1x.png" media="(min-width: 1440px)")
        source(srcset="img/ural-mobile@1x.webp" type="image/webp")
        img.slider__slide.slider__slide--first.reset-picture(src="img/ural-mobile@1x.jpg" alt="Ural")
      picture
        source(srcset="img/arc-desktop@1x.webp" media="(min-width: 1440px)" type="image/webp")
        source(srcset="img/arc-desktop@1x.png" media="(min-width: 1440px)")
        source(srcset="img/arc-mobile@1x.webp" type="image/webp")
        img.slider__slide.slider__slide--second.reset-picture(src="img/arc-mobile@1x.jpg" alt="Arc")
      svg.decor.slider__decor-black-alfa(xmlns="http://www.w3.org/2000/svg" width="24" height="25")
        path(fill-rule="evenodd" fill="#131212" d="M23.179 23.205c-.411 0-.822-.205-1.232-.205-.411-.206-.822-.411-1.027-.617-.411-.411-.617-.822-.822-1.232-.411-.411-.616-1.027-1.027-1.644L11.47.814h-1.027L.377 24.027h22.802v-.822z")
      svg.decor.slider__decor-transparent-alfa(xmlns="http://www.w3.org/2000/svg" width="26.5" height="26.5")
        path(stroke="#000" stroke-linecap="round" fill="none" d="M24.679 23.705c-.411 0-.821-.205-1.232-.205-.411-.206-.822-.411-1.028-.617-.41-.411-.616-.822-.821-1.232-.411-.411-.616-1.027-1.027-1.644L12.97 1.314h-1.027L1.877 24.527h22.802v-.822z")
      p.decor.decor--text.slider__decor-A A
      p.decor.decor--text.slider__decor-G G
      p.decor.decor--text.slider__decor-E E
    .slider__button-wrapper
      button.slider__button(aria-label="Переключить слайд назад")
      button.slider__button(aria-label="Переключить слайд вперёд")
    .slider__plaque
      p.slider__plaque-thirteen 13
      p.slider__plaque-seven 7
